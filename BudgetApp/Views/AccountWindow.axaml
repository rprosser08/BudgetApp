<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BudgetApp.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BudgetApp.Views.AccountWindow"
        x:DataType="viewModels:AccountWindowViewModel"
        Title="Accounts">
    <Grid
        RowDefinitions="Auto, *, Auto"
        ColumnDefinitions="*, Auto, Auto"
        x:Name="Root"
        >
        
        <TextBlock 
            Text="Accounts" 
            FontWeight="Bold" 
            FontSize="22" 
            Margin="0,10,0,15" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="3"
        />
        
        <ScrollViewer 
            Grid.Row="1" 
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0 0 0 10">
            <ItemsControl ItemsSource="{Binding AccountNames}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="viewModels:AccountViewModel">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBox 
                                Grid.Column="0" 
                                Text="{Binding Name}" 
                                TextChanged="TextBox_OnTextChanged" 
                                VerticalAlignment="Center"
                                Padding="8"
                                Margin="0 0 10 0"
                                HorizontalAlignment="Stretch"
                                />
                            <Button 
                                Grid.Column="1" 
                                Command="{Binding #Root.((viewModels:AccountWindowViewModel)DataContext).DeleteAccountCommand}"
                                CommandParameter="{Binding .}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="8"
                                >
                                <PathIcon Data="{StaticResource delete_regular}" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <TextBox 
            Grid.Row="2" 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="{Binding NewAccount}"
            Watermark="New Account Name"
            Padding="8"
            VerticalAlignment="Center"
            Margin="0 0 10 0"
            HorizontalAlignment="Stretch"
            >
            <TextBox.KeyBindings>
                <KeyBinding Command="{Binding AddNewAccountCommand}"
                            Gesture="Enter" />
            </TextBox.KeyBindings>
        </TextBox>
        
        <Button 
            Grid.Row="2"
            Grid.Column="2"
            Command="{Binding AddNewAccountCommand}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Padding="10"
            >
            <PathIcon Data="{StaticResource add_square_regular}" />
        </Button>
    </Grid>
</Window>
